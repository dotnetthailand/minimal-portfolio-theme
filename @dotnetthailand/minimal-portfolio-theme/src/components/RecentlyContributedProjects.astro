---
import { getLatestContributedRepos } from "../services/githubService";
const repos = await getLatestContributedRepos("aaronamm");
---

<div class="repo-container">
  <h2 class="title">Recently contributed projects:</h2>

  <ul class="repo-list">
    {
      repos.map((repo) => (
        <li class="item">
          <a class="link" href={repo.html_url} target="_blank">
            {repo.name}
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  .repo-container {
    margin-top: 1rem;
    > .title {
      font-size: 0.875rem;
    }
  }

  .repo-list {
    margin: 0;
    padding: 0;
    list-style: none;
    border-bottom: 1px solid var(--colors-border);
    margin-bottom: 0.5rem;
    font-size: 1rem;

    .item {
      margin: 0.25rem 0;
      font-size: 0.875rem;
    }

    .link {
      text-decoration: none;
      padding: 0.125rem;
      display: block;
    }

    .link:hover {
      background-color: var(--bs-primary-bg-subtle);
      border-radius: 0.25rem;
    }
  }
</style>
